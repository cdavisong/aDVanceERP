<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FAFAFA">

    <!-- Encabezado con logo estilo aDVance ERP -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DV"
            android:textSize="24sp"
            android:textColor="#FF808080"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ance "
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCANNER"
            android:textSize="24sp"
            android:textColor="#FAFAFA"
            android:background="#B22222"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Campo de dirección IP y puerto -->
    <LinearLayout
        android:id="@+id/layoutDireccionPuerto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="0dp"
        android:padding="8dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP Servidor:"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="8dp"/>

        <EditText
            android:id="@+id/fieldDireccionIp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="192.168.1."
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:background="#FAFAFA"
            android:padding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puerto:"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="8dp"/>

        <EditText
            android:id="@+id/fieldPuerto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="9002"
            android:inputType="number"
            android:digits="0123456789"
            android:maxLength="5"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:background="#FAFAFA"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Estado de conexión -->
    <TextView
      android:id="@+id/connectionStatus"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Estado: Desconectado"
      android:textSize="14sp"
      android:textColor="@android:color/black"
      android:layout_marginBottom="16dp"
      android:padding="8dp"/>

    <!-- Botón Conectar -->
    <Button
        android:id="@+id/connectButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conectar"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_button"
        android:layout_marginBottom="16dp"/>    

    <!-- Botón Escanear -->
    <Button
        android:id="@+id/scanButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escanear Código"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_button"
        android:layout_marginBottom="16dp"/>

    <!-- Resultado del escaneo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Último Código:"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ninguno"
        android:textSize="14sp"
        android:textColor="#B22222"
        android:padding="8dp"
        android:background="#FAFAFA"
        android:layout_marginBottom="16dp"/>

    <!-- Historial de escaneos -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Historial:"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FAFAFA"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/layoutHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>

</LinearLayout>