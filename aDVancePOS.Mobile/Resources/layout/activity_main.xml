<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="8dp">

  <!-- Encabezado con logo estilo aDVance ERP -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="a"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DV"
        android:textSize="24sp"
        android:textColor="#FF808080"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ance "
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POS"
        android:textSize="24sp"
        android:textColor="#FAFAFA"
        android:background="#B22222"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textStyle="bold"/>
  </LinearLayout>

  <!-- Buscador con botón de importar -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginBottom="8dp">

    <EditText
        android:id="@+id/txtBuscar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Buscar producto..."
        android:inputType="text"
        android:background="@drawable/rounded_edit_text"
        android:padding="12dp"/>

    <ImageButton
        android:id="@+id/btnImportar"
        android:layout_width="54dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:src="@drawable/refresh_24px"
        android:background="@drawable/rounded_button"
        android:contentDescription="Importar"
        android:scaleType="center"
        android:padding="8dp"/>
  </LinearLayout>

  <!-- Separador después del buscador -->
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#E0E0E0"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp"/>

  <!-- Lista de productos -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/productB_20px"
        android:contentDescription="Ícono de productos"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Productos"
        android:textSize="16sp"
        android:textColor="#333333"
        android:textStyle="bold"/>
  </LinearLayout>

  <ListView
      android:id="@+id/lstProductos"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:divider="#E0E0E0"
      android:dividerHeight="1dp"
      android:scrollbars="vertical"/>

  <!-- Carrito de compras -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/shopping_cartB_20px"
        android:contentDescription="Ícono de carrito"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carrito"
        android:textSize="16sp"
        android:textColor="#333333"
        android:textStyle="bold"/>
  </LinearLayout>

  <!-- Encabezado de columnas del carrito -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:background="#F5F5F5"
      android:padding="12dp"
      android:layout_marginBottom="1dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="Nombre"
        android:textSize="14sp"
        android:textColor="#333333"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="Cantidad"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="#333333"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Subtotal"
        android:textSize="14sp"
        android:gravity="end"
        android:textColor="#333333"
        android:textStyle="bold"/>
  </LinearLayout>

  <ListView
      android:id="@+id/lstCarrito"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:divider="#E0E0E0"
      android:dividerHeight="1dp"
      android:scrollbars="vertical"/>

  <!-- Total y botones de pago -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="#F5F5F5"
      android:padding="8dp"
      android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/lblTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: $0.00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="20dp"
        android:gravity="end"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#F5F5F5"
        android:padding="8dp">

      <TextView
          android:id="@+id/lblVentasEfectivo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Efectivo: $0.00"
          android:textSize="14sp"
          android:textColor="#333333"/>

      <TextView
          android:id="@+id/lblVentasTransferencia"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Transferencias: $0.00"
          android:textSize="14sp"
          android:textColor="#333333"
          android:layout_marginTop="4dp"/>

      <TextView
          android:id="@+id/lblVentasTotal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Total acumulado: $0.00"
          android:textSize="16sp"
          android:textColor="#333333"
          android:textStyle="bold"
          android:layout_marginTop="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

      <Button
          android:id="@+id/btnPagarEfectivo"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Efectivo"
          android:background="@drawable/rounded_button"
          android:textColor="#000000"
          android:layout_marginEnd="4dp"/>

      <Button
          android:id="@+id/btnPagarTransferencia"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Transferencia"
          android:background="@drawable/rounded_button"
          android:textColor="#000000"
          android:layout_marginStart="4dp"/>

      <Button
          android:id="@+id/btnCierreVenta"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Cierre de venta"
          android:background="@drawable/rounded_button"
          android:textColor="#000000"
          android:layout_marginStart="8dp"/>
    </LinearLayout>
  </LinearLayout>
</LinearLayout>